{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vitest/globals"],

    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
